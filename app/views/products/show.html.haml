.card.mt-4
  .card-body

    %img.card-img-top.mb-3{alt: "Photo with product", src: @product.photo_url}
    %h2= @product.name
    %p
      %b Description:
      = @product.description

    %ul.list-group.list-group-flush.mb-3
      %li.list-group-item
        .row
          .col-md-6= "Model: #{@product.model}"
          .col-md-6= "Brand: #{@product.brand}"
          .col-md-6= "Price: #{@product.price} z≈Ç"
          .col-md-6= "Active: #{@product.active}"

    -# = link_to 'Edit', edit_product_path(@product)
    -# \|
    = link_to 'Back', products_path
