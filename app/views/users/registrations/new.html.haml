.card.mt-4
  .card-body
    .card-title
      %h5 Sign up
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "users/shared/error_messages", resource: resource
      .row.mb-5
        .col-md-6
          .mb-4
            = f.input :email, placeholder: "user@domain.com", autofocus: true, autocomplete: "email"
            = f.input :password, hint: "#{@minimum_password_length && "#{@minimum_password_length} characters minimum"}"
            = f.input :password_confirmation, autocomplete: "new-password"
          .actions
            = f.submit "Sign up", class: "btn btn-primary"
    = render "users/shared/links"
